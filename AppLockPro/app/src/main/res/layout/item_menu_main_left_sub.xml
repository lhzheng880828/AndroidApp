<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sub_menu"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/view_huge_margin"
    android:paddingRight="@dimen/view_huge_margin"
    android:paddingBottom="@dimen/view_common_margin"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/cb_enable"
        android:clickable="false"
        android:button="@null"
        android:background="@drawable/mode_item_background_selector"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:text="test"
        android:textSize="@dimen/normal_text_size"
        android:layout_marginLeft="@dimen/view_common_margin"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>