<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/view_common_margin"
    android:paddingTop="@dimen/view_common_padding"
    android:background="@drawable/share_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/view_larget_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:layout_marginRight="@dimen/view_larget_margin"
            android:src="@drawable/list_divider_no_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/share_app_to_friend"
            android:textColor="@color/colorSecondTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/list_divider_no_width"
            android:layout_marginLeft="@dimen/view_larget_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <GridView
        android:id="@+id/gv_share_list"
        android:numColumns="3"
        android:layout_marginBottom="@dimen/view_larget_margin"
        android:layout_marginRight="@dimen/view_larget_margin"
        android:layout_marginLeft="@dimen/view_larget_margin"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>
</LinearLayout>
