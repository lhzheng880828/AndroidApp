<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all"
    android:layout_margin="@dimen/view_common_margin"
    android:padding="@dimen/view_common_padding"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_normal_clickable_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_icon"
        android:src="@drawable/wx_timeline"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_name"
        android:text="text"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorSecondTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>