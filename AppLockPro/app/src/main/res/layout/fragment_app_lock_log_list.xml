<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/view_common_margin"
    android:layout_marginRight="@dimen/view_common_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rb_show_type"
        android:orientation="horizontal"
        android:divider="@drawable/list_divider_no_width"
        android:showDividers="middle"
        android:layout_marginTop="@dimen/view_common_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_time"
            android:button="@null"
            android:text="@string/sort_by_time"
            android:textColor="@drawable/day_textcolor_selector"
            android:textSize="@dimen/normal_text_size"
            android:paddingLeft="@dimen/view_larget_margin"
            android:paddingRight="@dimen/view_larget_margin"
            android:layout_weight="1"
            android:background="@drawable/common_checkbox_bg_selctor"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_name"
            android:button="@null"
            android:text="@string/sort_by_name"
            android:textColor="@drawable/day_textcolor_selector"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:paddingLeft="@dimen/view_larget_margin"
            android:paddingRight="@dimen/view_larget_margin"
            android:background="@drawable/common_checkbox_bg_selctor"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>
