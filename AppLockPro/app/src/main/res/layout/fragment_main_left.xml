<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:paddingBottom="@dimen/view_width_padding">
        <RelativeLayout
            android:id="@+id/ll_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_common_margin"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/view_common_padding"
                android:src="@drawable/ic_unknown_user" />
            <Button
                android:id="@+id/bt_reg_login"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/iv_head"
                android:layout_marginTop="@dimen/view_common_margin"
                android:background="@drawable/common_btn_selector"
                android:text="@string/register_or_login"
                android:textColor="@color/colorSecondTextColor"
                android:textSize="@dimen/small_text_size" />
            <Button
                android:id="@+id/bt_logout"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/iv_head"
                android:layout_marginTop="@dimen/view_common_margin"
                android:background="@drawable/common_btn_selector"
                android:text="@string/logout"
                android:textColor="@color/colorSecondTextColor"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/view_width_padding"
            android:layout_toRightOf="@id/ll_header"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcome_to_use_app"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size" />
            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_width_padding"
                android:text="@string/current_date"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />
            <TextView
                android:id="@+id/tv_current_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_width_padding"
                android:text="@string/current_location"
                android:textColor="@color/white"
                android:textSize="@dimen/tiny_text_size" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_common_margin"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_share"
            style="@style/mainLeftDrawerButton"
            android:drawableLeft="@drawable/ic_share"
            android:text="@string/share_to_friend"
            android:textColor="@color/colorSecondTextColor"/>
        <Button
            android:id="@+id/bt_feedback"
            style="@style/mainLeftDrawerButton"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawablePadding="@dimen/view_common_margin"
            android:text="@string/feed_back"
            android:textColor="@color/colorSecondTextColor"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bottom"
        android:layout_marginLeft="@dimen/view_common_margin"
        android:layout_marginRight="@dimen/view_common_margin"
        android:layout_marginTop="@dimen/view_common_margin"
        android:src="@drawable/list_divider_no_width" />
    <ExpandableListView
        android:id="@+id/ev_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_divider"
        android:layout_below="@id/rl_header"
        android:divider="@null"
        android:groupIndicator="@null"
        android:padding="@dimen/view_common_margin" />
</RelativeLayout>