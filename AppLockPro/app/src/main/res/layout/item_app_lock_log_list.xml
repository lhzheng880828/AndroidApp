<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:orientation="horizontal"
    android:background="@drawable/background_normal_clickable_item"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="@dimen/view_common_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_selected"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_photo"
        android:src="@drawable/icon_person"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/view_common_margin"
        android:layout_toRightOf="@id/cb_selected"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_time"
        android:text="time"
        android:textSize="@dimen/tiny_text_size"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_error_count"
        android:text="error_count"
        android:textSize="@dimen/tiny_text_size"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_appName"
        android:textSize="@dimen/small_text_size"
        android:text="Name"
        android:layout_alignTop="@id/tv_time"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_location"
        android:text="location"
        android:textSize="@dimen/tiny_text_size"
        android:layout_below="@id/tv_error_count"
        android:layout_alignLeft="@id/tv_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>