<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="#cfcece"
                android:width="1px"/>
            <corners
                android:radius="2px" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#297ade"
                android:endColor="#3183c6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
