<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.market" parent="android:Theme.Holo.Light">
        <!-- <item name="android:actionBarStyle"> @style/MyActionBar</item> -->
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:height">65px</item>
        <item name="android:width">200px</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title"></style>

    <!--
    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.Tab">

        <item name="android:background">@drawable/tab_indicator_selfdefine</item>
        <item name="android:minWidth">@dimen/app_name_width</item>
    </style>
    -->

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">

        <!-- effective start -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/popuuDiver</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearancePopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearancePopupMenu</item>
        <!-- effective end -->

    </style>

    <style name="MainThem" parent="@android:style/Theme.Holo.Light">

        <!-- effective start -->
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/popuuDiver</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearancePopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearancePopupMenu</item>
        <!-- effective end -->

    </style>

    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:minWidth">@dimen/action_bar_tab_width</item>
    </style>

    <style name="popuuDiver" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:divider">@drawable/dotted_line</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">

        <!-- <item name="android:popupBackground">@drawable/menu_item_bg</item> -->
        <item name="android:popupBackground">@drawable/menu_bg_top_right</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
        <item name="android:paddingTop">20dp</item>
        <!-- <item name="android:dropDownHorizontalOffset">-18dp</item> -->
    </style>

    <style name="TextAppearancePopupMenu">
        <item name="android:textSize">@dimen/item_name_textsize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CallDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>
    </style>

    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:horizontalSpacing">40dp</item>
    </style>

</resources>