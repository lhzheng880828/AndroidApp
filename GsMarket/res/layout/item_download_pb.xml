<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:layout_gravity="center_vertical"
    android:background="@drawable/item"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- icon -->

    <ImageView
        android:id="@+id/download_item_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

    <!-- context -->

    <RelativeLayout
        android:id="@+id/download_item_layout"
        android:layout_width="@dimen/download_pb_progress_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/download_info_margin_right"
        android:layout_toRightOf="@id/download_item_icon"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/download_item_name"
            android:layout_width="@dimen/app_name_width"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/textvolor_414141"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/download_item_size"
            android:layout_width="@dimen/app_name_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:gravity="right"
            android:lines="1"
            android:textColor="@color/item_pack_property"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/download_item_pb"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="@dimen/download_pb_progress_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_item_name"
            android:gravity="left|center_vertical"
            android:indeterminateBehavior="repeat" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:layout_marginLeft="30dip"
        android:layout_toRightOf="@id/download_item_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/download_item_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/download_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@color/textvolor_414141"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- close -->

    <ImageView
        android:id="@+id/download_item_close"
        android:layout_width="@dimen/item_button_icon_width"
        android:layout_height="@dimen/item_button_icon_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/button_margin_top"
        android:src="@drawable/btn_delete" />

</RelativeLayout>