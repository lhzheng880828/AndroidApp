<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:gravity="center"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/grdview_margin_left"
        android:layout_marginRight="@dimen/grdview_margin_left"
        android:layout_marginTop="@dimen/grdview_margin_top"
        android:clickable="false"
        android:fadingEdge="none"
        android:horizontalSpacing="@dimen/search_button_marginleft"
        android:numColumns="3"
        android:verticalSpacing="@dimen/grdview_margin_top" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_application"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_22px"
        android:visibility="gone" />

</LinearLayout>